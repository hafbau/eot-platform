# =============================================================================
# EOT Intelligence Platform - Root Environment Configuration
# =============================================================================
# This file contains environment variables shared across the entire monorepo
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# TURBOREPO CONFIGURATION
# -----------------------------------------------------------------------------
# Turborepo remote caching (for team development)
TURBO_TOKEN=your_turbo_token_here
TURBO_TEAM=your_turbo_team_name

# -----------------------------------------------------------------------------
# NODE.JS CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# VERCEL CONFIGURATION
# -----------------------------------------------------------------------------
# These are automatically set by Vercel, but can be useful for local development
VERCEL_URL=localhost:3000
VERCEL_ENV=development

# -----------------------------------------------------------------------------
# GLOBAL DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
# Enable/disable development features across all packages
DEBUG=false
CI=false

# -----------------------------------------------------------------------------
# PACKAGE-SPECIFIC OVERRIDES
# -----------------------------------------------------------------------------
# These can be overridden in individual package .env files

# Supabase (shared across packages)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Application URL (shared)
NEXT_PUBLIC_SITE_URL=http://localhost:3000