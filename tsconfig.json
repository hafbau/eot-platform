{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@eot/core": ["./packages/core/src"],
      "@eot/ui": ["./packages/ui/src"],
      "@eot/identity": ["./packages/modules/identity/src"],
      "@eot/organizations": ["./packages/modules/organizations/src"],
      "@eot/storage": ["./packages/modules/storage/src"],
      "@eot/integrations": ["./packages/modules/integrations/src"],
      "@eot/analytics": ["./packages/modules/analytics/src"],
      "@eot/audit": ["./packages/modules/audit/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}