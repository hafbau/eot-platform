# =============================================================================
# EOT Intelligence Platform - Production Environment Configuration
# =============================================================================
# Copy this file to .env.production for production deployments
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION (PRODUCTION)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION (PRODUCTION)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=https://eot-intelligence.com
NODE_ENV=production
NEXT_PUBLIC_VERCEL_ENV=production

# Analytics and telemetry (enabled in production)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_TELEMETRY=false
NEXT_TELEMETRY_DISABLED=1

# -----------------------------------------------------------------------------
# AUTHENTICATION CONFIGURATION (PRODUCTION)
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET=your_production_jwt_secret_key_very_secure
NEXT_PUBLIC_AUTH_CALLBACK_URL=https://eot-intelligence.com/auth/callback
NEXT_PUBLIC_AUTH_SUCCESS_REDIRECT=/dashboard
NEXT_PUBLIC_AUTH_ERROR_REDIRECT=/login

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (PRODUCTION)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://prod_user:prod_password@prod-db.supabase.co:5432/postgres
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# -----------------------------------------------------------------------------
# STORAGE CONFIGURATION (PRODUCTION)
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_S3_BUCKET=eot-intelligence-production-storage
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=production-documents

# -----------------------------------------------------------------------------
# EXTERNAL INTEGRATIONS (PRODUCTION)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_production_stripe_key
STRIPE_SECRET_KEY=sk_live_production_stripe_secret
EMAIL_API_KEY=your_production_email_api_key
EMAIL_FROM_ADDRESS=noreply@eot-intelligence.com

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS (PRODUCTION)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=your_production_sentry_dsn
SENTRY_AUTH_TOKEN=your_production_sentry_auth_token
SENTRY_ENVIRONMENT=production
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-PRODUCTION_GA_ID
NEXT_PUBLIC_POSTHOG_KEY=your_production_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS (PRODUCTION)
# -----------------------------------------------------------------------------
DEBUG=false
NEXT_PUBLIC_DEBUG_MODE=false
FAST_REFRESH=false
NEXT_PUBLIC_DEV_TOOLS=false

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION (PRODUCTION)
# -----------------------------------------------------------------------------
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000
CORS_ORIGIN=https://eot-intelligence.com

# -----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION (PRODUCTION)
# -----------------------------------------------------------------------------
CACHE_TTL=3600
STATIC_CACHE_TTL=86400
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_IMAGE_QUALITY=90

# -----------------------------------------------------------------------------
# FEATURE FLAGS (PRODUCTION)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_FEATURE_NEW_DASHBOARD=true
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_FEATURE_BETA_FEATURES=false

# -----------------------------------------------------------------------------
# VERCEL SPECIFIC (PRODUCTION)
# -----------------------------------------------------------------------------
VERCEL_ENV=production
TURBO_TOKEN=your_turbo_token
TURBO_TEAM=your_turbo_team

# -----------------------------------------------------------------------------
# SECURITY TOKENS (PRODUCTION)
# -----------------------------------------------------------------------------
# Additional security configurations for production
WEBHOOK_SECRET=your_webhook_secret_key
API_SECRET_KEY=your_api_secret_key
ENCRYPTION_KEY=your_encryption_key

# -----------------------------------------------------------------------------
# COMPLIANCE & LOGGING (PRODUCTION)
# -----------------------------------------------------------------------------
ENABLE_AUDIT_LOGGING=true
LOG_LEVEL=warn
GDPR_COMPLIANCE=true
RETENTION_DAYS=2555