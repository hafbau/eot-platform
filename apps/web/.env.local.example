# =============================================================================
# EOT Intelligence Platform - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Get these values from your Supabase project dashboard
# Project Settings > API > Project URL and Project API keys
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# For server-side operations (keep secret)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION  
# -----------------------------------------------------------------------------
# The base URL of your application
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Application environment (development, staging, production)
NODE_ENV=development

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_TELEMETRY=false
NEXT_TELEMETRY_DISABLED=1

# -----------------------------------------------------------------------------
# AUTHENTICATION CONFIGURATION
# -----------------------------------------------------------------------------
# JWT Secret for additional security (generate a strong random string)
NEXTAUTH_SECRET=your_jwt_secret_key_here

# Auth callback URLs
NEXT_PUBLIC_AUTH_CALLBACK_URL=http://localhost:3000/auth/callback
NEXT_PUBLIC_AUTH_SUCCESS_REDIRECT=/dashboard
NEXT_PUBLIC_AUTH_ERROR_REDIRECT=/login

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Database connection string (if using direct connection)
DATABASE_URL=postgresql://user:password@localhost:5432/eot_intelligence

# Connection pooling settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------------------------------------------------------------------
# STORAGE CONFIGURATION
# -----------------------------------------------------------------------------
# AWS S3 Configuration (if using for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name

# Supabase Storage (alternative to S3)
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=documents

# -----------------------------------------------------------------------------
# EXTERNAL INTEGRATIONS
# -----------------------------------------------------------------------------
# Stripe for payments (if applicable)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Email service configuration (e.g., SendGrid, Resend)
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS
# -----------------------------------------------------------------------------
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog for product analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------------------------------
# Enable debug modes
DEBUG=false
NEXT_PUBLIC_DEBUG_MODE=false

# Hot reload and development features
FAST_REFRESH=true
NEXT_PUBLIC_DEV_TOOLS=true

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS settings
CORS_ORIGIN=http://localhost:3000

# -----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION
# -----------------------------------------------------------------------------
# Cache settings
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# Image optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_IMAGE_QUALITY=85

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Enable/disable specific features
NEXT_PUBLIC_FEATURE_NEW_DASHBOARD=false
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS=false
NEXT_PUBLIC_FEATURE_BETA_FEATURES=false