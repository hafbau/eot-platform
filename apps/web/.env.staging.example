# =============================================================================
# EOT Intelligence Platform - Staging Environment Configuration
# =============================================================================
# Copy this file to .env.staging for staging deployments
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION (STAGING)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_staging_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_staging_supabase_service_role_key

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION (STAGING)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=https://staging.eot-intelligence.com
NODE_ENV=staging
NEXT_PUBLIC_VERCEL_ENV=staging

# Analytics and telemetry (enabled in staging for testing)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_TELEMETRY=true
NEXT_TELEMETRY_DISABLED=0

# -----------------------------------------------------------------------------
# AUTHENTICATION CONFIGURATION (STAGING)
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET=your_staging_jwt_secret_key
NEXT_PUBLIC_AUTH_CALLBACK_URL=https://staging.eot-intelligence.com/auth/callback
NEXT_PUBLIC_AUTH_SUCCESS_REDIRECT=/dashboard
NEXT_PUBLIC_AUTH_ERROR_REDIRECT=/login

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (STAGING)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://staging_user:staging_password@staging-db.supabase.co:5432/postgres
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=8

# -----------------------------------------------------------------------------
# STORAGE CONFIGURATION (STAGING)
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_staging_aws_access_key
AWS_SECRET_ACCESS_KEY=your_staging_aws_secret_key
AWS_S3_BUCKET=eot-intelligence-staging-storage
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=staging-documents

# -----------------------------------------------------------------------------
# EXTERNAL INTEGRATIONS (STAGING)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_staging_stripe_key
STRIPE_SECRET_KEY=sk_test_staging_stripe_secret
EMAIL_API_KEY=your_staging_email_api_key
EMAIL_FROM_ADDRESS=staging@eot-intelligence.com

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS (STAGING)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=your_staging_sentry_dsn
SENTRY_AUTH_TOKEN=your_staging_sentry_auth_token
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-STAGING_GA_ID
NEXT_PUBLIC_POSTHOG_KEY=your_staging_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS (STAGING)
# -----------------------------------------------------------------------------
DEBUG=false
NEXT_PUBLIC_DEBUG_MODE=true
FAST_REFRESH=false
NEXT_PUBLIC_DEV_TOOLS=true

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION (STAGING)
# -----------------------------------------------------------------------------
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_WINDOW_MS=900000
CORS_ORIGIN=https://staging.eot-intelligence.com

# -----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION (STAGING)
# -----------------------------------------------------------------------------
CACHE_TTL=1800
STATIC_CACHE_TTL=43200
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_IMAGE_QUALITY=85

# -----------------------------------------------------------------------------
# FEATURE FLAGS (STAGING)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_FEATURE_NEW_DASHBOARD=true
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_FEATURE_BETA_FEATURES=true

# -----------------------------------------------------------------------------
# VERCEL SPECIFIC (STAGING)
# -----------------------------------------------------------------------------
VERCEL_ENV=staging
TURBO_TOKEN=your_turbo_token
TURBO_TEAM=your_turbo_team